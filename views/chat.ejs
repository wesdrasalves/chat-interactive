<!doctype html>
<html>
  <head>
    <title>Chat Game</title>
    <link rel="stylesheet" type="text/css" href="./style/style.css" />
    <script src="./scripts/jquery-1.11.1.js"></script>  
    <script src="./scripts/socket.io-1.2.0.js"></script>
    <script src="./scripts/personal.js"></script>
    <script src="./scripts/server.js"></script>    
    <script>
        $(document).ready(function(){
            roomServer.start(personal.start('<%=person.userId + person.user%>','<%=person.posX%>','<%=person.posY%>'),
            {
                textData : $("#textMessage"),
                chatRoom : $("#chatRoom"),
                roomId : $("#roomId").val()
            });
            
            $(window).keydown(function(x){ personal.getKeyMove(x);});

            $('form').submit(function(){
                   personal.talk($("#textMessage").val());
                   $("#textMessage").val('');
                   return false;
            });  
        });
        
    </script>
  </head>
  <body>
    <main>      
        <div>
          <div id="chatRoom">
          </div>
          <div id="listUsers">
              <h1>Hist√≥rico de Mensagens</h1>\
              <div>
                <ul>
                    <% //for(var i=0; i< chatRoom.persons.length; i++) {%>
                        <!--<li>
                            <div id="nameUser"><% //=chatRoom.persons[i].user %></div>
                            <div id="statusUser" class="<% //=chatRoom.persons[i].active?'userActive':'userInactive'; %>"></div>
                            <input type="hidden" id="idUser" value="<% //=chatRoom.persons[i].key%>"/>                        
                        </li>-->   
                    <% //}%>    
                </ul>                  
              </div>
          </div>          
        </div>
        <div class="panelSendMessage">
          <form action="">
            <input id="textMessage" maxlength="100" autocomplete="off" type="text"/>
            <button>Send</button>
          </form>    
          <input id="roomId" name="roomId" type="hidden" value="<%=chatRoom.id %>" />          
        </div>
    </main>
  </body>
</html>